<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Base de datos Rutas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles/clienteNuevo.css">
  <link rel="stylesheet" href="styles/headerFooter.css">
</head>
<body>

<%- include('partials/header.ejs') %>
<div class="counter">

  <h1 class="title">Nuevo Cliente</h1>

  <form class="grid-container" action="/add" method="post">

    <label for="codigo">Codigo:</label>
    <input type="number" id="codigo" name="codigo" min="0" max="9999" autocomplete="off" autofocus required>

    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" autocomplete="off" required>

    <label for="direccion">Direccion:</label>
    <input type="text" id="direccion" name="direccion" autocomplete="off" required>

    <label for="barrio">Barrio:</label>
    <input type="text" id="barrio" name="barrio" autocomplete="off" required>

    <label for="telefono">Telefono:</label>
    <input type="number" id="telefono" name="telefono" min="0" max="9999999999" autocomplete="off" required>

    <label for="descripcion">Descripcion:</label>
    <input type="text" id="descripcion" name="descripcion" autocomplete="off">

    <label for="vehiculo">Vehiculo:</label>
    <select type="text" id="vehiculo" name="vehiculo" required>
      <option value="" disabled selected>Seleccione</option>
      <% for(let vehiculo of vehiculos) { %>
        <option value="<%= vehiculo.vehiculo %>"><%= vehiculo.vehiculo %></option>
      <% } %>
    </select>

    <label for="ruta">Ruta:</label>
    <select type="text" id="ruta" name="ruta" required>
      <option value="" disabled selected>Seleccione</option>
      <% for(let ruta of rutas) { %>
        <option value="<%= ruta.ruta %>"><%= ruta.ruta %></option>
      <% } %>
    </select>

    <button type="submit">Agregar</button>

  </form>

</div>
<%- include('partials/footer.ejs') %>